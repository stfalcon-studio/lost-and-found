{% extends 'base.html.twig' %}

{% block title %}
    Edit item |
    {{ parent() }}
{% endblock title %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link rel="stylesheet" type="text/css" href="{{ asset('lib/leaflet-draw/leaflet.draw.css') }}" />
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}

    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    <script src="{{ asset('js/item_edit_map.js') }}"></script>
{% endblock javascripts %}

{% block content %}
    <a href="{{ path('homepage') }}">На головну</a>
    <br />

    <div>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>


    <div id="map" style="width: 1200px; height: 800px"></div>
{% endblock content %}
