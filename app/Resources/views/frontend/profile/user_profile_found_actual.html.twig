{% extends 'base.html.twig' %}

{% block title %}
    Profile |
    {{ parent() }}
{% endblock title %}

{% block content %}
    {# Flash messages #}
    {% for flashMessage in app.session.flashbag.get('update') %}
        <div class="flash-message">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <ul class="nav nav-tabs">
        <li role="presentation">
            <a href="{{ path('user_lost_actual') }}">Lost items</a>
        </li>
        <li role="presentation" class="active">
            <a href="#">Found items</a>
        </li>
    </ul>

    <ul class="nav nav-pills">
        <li role="presentation" class="active">
            <a href="#">Actual</a>
        </li>
        <li role="presentation">
            <a href="{{ path('user_found_resolved') }}">Resolved</a>
        </li>
    </ul>

    {% for item in items %}
        <li>
            <a href="{{ path('item_details', {'id': item.id}) }}">{{ item.title }}</a> |
            <a href="{{ path('item_edit', {'id': item.id}) }}">Edit</a>
        </li>
    {% endfor %}
{% endblock content %}
