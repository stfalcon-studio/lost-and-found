{% extends 'base.html.twig' %}

{% block title %}I lost something... | {{ parent() }}{% endblock title %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link rel="stylesheet" type="text/css" href="{{ asset('lib/leaflet-draw/leaflet.draw.css') }}" />
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}

    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    <script src="{{ asset('lib/leaflet-draw/leaflet.draw.js') }}"></script>
    <script src="{{ asset('js/map_lost.js') }}"></script>
{% endblock javascripts %}

{% block content %}
    <h1>I lost something...</h1>

    <div>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <h3>Photos</h3>
        <ul class="photos" data-prototype="{{ form_widget(form.photos.vars.prototype)|e }}">
            <script src="{{ asset('js/add_image_photos.js') }}"></script>
        </ul>
        {{ form_end(form) }}
    </div>

    <div id="map" style="width: auto; height: 800px"></div>
{% endblock content %}
